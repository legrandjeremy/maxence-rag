{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"]
  },
  "include": [
    "handlers/**/*.ts",
    "lib/**/*.ts",
    "models/**/*.ts",
    "index.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "tests/**", "dist/**"]
}